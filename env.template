# Vincula - Configuración de Producción

# =================================
# Base de datos PostgreSQL
# =================================
POSTGRES_DB=vincula
POSTGRES_USER=vincula_user
POSTGRES_PASSWORD=tu_password_seguro_aqui

# =================================
# Seguridad
# =================================
# Genera con: openssl rand -hex 32
JWT_SECRET=tu_jwt_secret_aqui

# =================================
# LiveKit (Videollamadas y Grabación)
# =================================
LIVEKIT_API_KEY=devkey
# Genera con: openssl rand -hex 32
LIVEKIT_SECRET_KEY=tu_livekit_secret_aqui

# =================================
# URLs de Producción
# =================================
# Backend en Hostinger VPS
REACT_APP_API_URL=http://72.60.48.118:8080
REACT_APP_WS_URL=ws://72.60.48.118:8080
REACT_APP_LIVEKIT_URL=ws://72.60.48.118:7880

# O usando el hostname
# REACT_APP_API_URL=http://srv965471.hstgr.cloud:8080
# REACT_APP_WS_URL=ws://srv965471.hstgr.cloud:8080
# REACT_APP_LIVEKIT_URL=ws://srv965471.hstgr.cloud:7880

# =================================
# Configuración de Grabación
# =================================
# Usar almacenamiento S3 (true) o local (false)
USE_S3_STORAGE=false

# Directorio local para grabaciones (si USE_S3_STORAGE=false)
RECORDINGS_DIR=/var/recordings

# Configuración S3 (si USE_S3_STORAGE=true)
AWS_ACCESS_KEY=tu_aws_access_key
AWS_SECRET_KEY=tu_aws_secret_key
AWS_REGION=us-west-2
AWS_BUCKET=healthcare-call-recordings


